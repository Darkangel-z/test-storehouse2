= simple_form_for @order do |f|
  = f.simple_fields_for :order_items, dynamic: true do |rf|
    = rf.input :product_id
    = rf.input :count
    = rf.input :direction, collection: ['on', 'from']
    = rf.remove_fields_link t('orders.item.remove')


  = f.add_fields_link :order_items, t('orders.item.add')
  = link_to t('products.add'), new_product_path

  = f.submit
