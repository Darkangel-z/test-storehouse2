!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TestStorehouse
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          .navbar-brand= link_to t('company'), root_path
        #navbar.navbar-collapse.collapse
          - if storekeeper_signed_in? && current_storekeeper.admin?
            %ul.nav.navbar-nav
              %li= link_to t('products.all'), products_path
              %li= link_to t('storekeepers'), storekeepers_path
              %li= link_to t('orders.show'), orders_path
          - elsif storekeeper_signed_in?
            %ul.nav.navbar-nav
              %li= link_to t('orders.new'), new_order_path
          %ul.nav.navbar-nav.navbar-right
            %li
              =link_to t('login'), storekeeper_session_path
    = yield
